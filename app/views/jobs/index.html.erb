</div>


<div class="col-xs-12 col-md-3">
  <%= render 'jobs/sidebar' %>
</div>

<div class="col-xs-12 col-md-9">
  <%= paginate @jobs, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-sm pagination-centered" %>

