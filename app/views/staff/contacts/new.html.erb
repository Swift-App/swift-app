
<div class="col-xs-12 col-md-6 col-md-offset-3">
  <h3 class="text-center">スタッフ様お問い合わせ</h3>
  <%= simple_form_for @contact, url: '/staff/contacts', html: {class: 'form-horizontal' } do |f| %>
    <%= f.input :name, required: true, label: 'お名前 「必須入力」', placeholder: '田中太郎' %>
    <%= f.input :furigana, label: 'ふりがな', placeholder: 'たなかたろう' %>
    <%= f.input :birthday, as: :string, label: 'お誕生日', start_year: Date.today.year - 65,
                            end_year: Date.today.year - 16, default: Date.today - 35.years %>
    <%= f.input :email, required: true, label: 'メールアドレス 「必須入力」', placeholder: 'staff@email.com' %>
    <%= f.input :phone, label: 'お電話番号', placeholder: '111-111-1111' %>
    <%= f.input :interview_date, as: :text, label: '面接希望日時（※第3希望までご入力下さい。）', placeholder: '', input_html: {rows: 5} %>
    <%= f.input :terms_and_conditions, as: :boolean, label: '利用規約に同意する' %>

    
    <%= render 'shared/terms' %>
    </br>

    <%= f.submit '送信', class: "btn btn-primary pull-right"%>
  <% end %>
</div><!-- col-xs-12 col-md-6 col-md-offset-3 -->


<script type="text/javascript">
$(function() {
  $("input#staff_contact_birthday").datepicker({defaultDate: "1980-01-01", dateFormat: 'yy-mm-dd', changeYear: true, changeMonth: true, yearRange: "-80:-16"});
});
</script>