<%= render 'carousel' %>

<section class="mt40 mb40">
  <div class="container">

    <div class="row">
      <!-- Panel -->
      <div class="col-sm-8" data-sr="enter left">
        <div class="heading mb20">
          <h4>ニュース</h4>
        </div>

        <% @news_articles.each do |news_article| %>
          <h1><p class="lead mb10"><%= news_article.title %></p></h1>
          <p><%= truncate(news_article.content, length: 50, omission: (link_to '...', news_article_path(id: @news_article.id)))%></p>
        <% end %>
        <br>

        <!-- Button -->
        <div class="text-center">
          <%= link_to 'ニュース一覧を見る', '', class: 'btn btn-primary btn-rw' %>    
        </div><!-- /button -->   
      </div>   



    </div>

    

  </div><!-- /container -->
</section><!-- /content -->


