<div class="col-xs-12 col-md-offset-4 col-md-4">
  <div class="devise-box">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: 'メールアドレス', label: false %>
        <%= f.input :password, required: false, placeholder: 'パスワード', label: false %>
        <%= f.input :remember_me, as: :boolean, label: 'ブラウザを閉じるときオートログインを有効にする' if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "ログイン", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>