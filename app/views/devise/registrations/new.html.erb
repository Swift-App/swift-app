<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required:true, autofocus:true %>
    <%= f.input :last_name, required:true %>
    <%= f.input :first_name_katakana, required:true %>
    <%= f.input :last_name_katakana, required:true %>
    <%= f.input :email, required: true, placeholder: 'Enter Email' %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: 'Enter Password' %>
    <%= f.input :password_confirmation, required: true, placeholder: 'Enter Password Again' %>
    <%= f.input :phone, required:true %>
    <%= f.input :birthday, required:true %>
    <%= f.input :zip_1, required:true %>
    <%= f.input :zip_2 %>
    <%= f.input :prefecture, required:true %>
    <%= f.input :city, required:true %>
    <%= f.input :other_address, required:true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
