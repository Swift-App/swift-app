<%= link_to '戻る', staff_index_path %>
<h3>給与受取り予約</h3>
<p><small>クリックして日程を選択してください。</small></p>


<%= simple_form_for @payment_reservation do |f| %>
  <% if @payment_reservation.confirming.blank? %>
    <label>支払い希望日 *</label><br />
    <%= f.date_field :request_date, required: true %>
    <br />

    <label>勤務日1</label><br>
    <%= f.date_field :date_1, required: false %>
    <br />

    <label>勤務日2</label><br>
    <%= f.date_field :date_2, required: false %>
    <br />

    <label>勤務日3</label><br>
    <%= f.date_field :date_3, required: false %>
    <br />

    <label>勤務日4</label><br>
    <%= f.date_field :date_4, required: false %>
    <br />

    <label>勤務日5</label><br>
    <%= f.date_field :date_5, required: false %>
    <br />

    <label>備考</label><br>
    <%= f.input :comments, as: :text, required: false, label: false %>
    <%= f.submit '確認画面' %>
  <% else %>
    <table class="table table-responsive">
      <tr>
        <th>支払い希望日<th>
        <td><%= @payment_reservation.request_date %><td>
      <tr>
        <th>勤務日1<th>
        <td><%= @payment_reservation.date_1 %><td>
      </tr>
      <tr>
        <th>勤務日2<th>
        <td><%= @payment_reservation.date_2 %><td>
      </tr>
      <tr>
        <th>勤務日3<th>
        <td><%= @payment_reservation.date_3 %><td>
      </tr>
      <tr>
        <th>勤務日4<th>
        <td><%= @payment_reservation.date_4 %><td>
      </tr>
      <tr>
        <th>勤務日5<th>
        <td><%= @payment_reservation.date_5 %><td>
      </tr>
      <tr>
        <th>備考<th>
        <td><%= @payment_reservation.comments %><td>
      </tr>
    </table>
    <%= f.hidden_field :request_date,　as: :string, required: true %>
    <%= f.hidden_field :date_1,　as: :string, required: false %>
    <%= f.hidden_field :date_2,　as: :string, required: false %>
    <%= f.hidden_field :date_3,　as: :string, required: false %>
    <%= f.hidden_field :date_4,　as: :string, required: false %>
    <%= f.hidden_field :date_5,　as: :string, required: false %>

    <% f.input :comments, as: :text, required: false, label: '備考' %>
    <p>この内容でよろしいでしょうか？</p>
    <%= f.submit '送信する' %>
    
  <% end %>

  <%= f.hidden_field :confirming %>
<% end %>
  