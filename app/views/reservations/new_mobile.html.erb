
    <%= link_to '戻る', staff_index_path %>
    <h3>お仕事予約</h3>
    <p><small>クリックして日程を選択してください。</small></p>

    <%= simple_form_for @reservation do |f| %>
      <% if @reservation.confirming.blank? %>
        <label>予約日1 *</label><br>
        <%= f.date_field :date_1, label: '予約日1' %>
        <br />

        <label>予約日2</label><br>
        <%= f.date_field :date_2, required: false %>
        <br />

        <label>予約日3</label><br>
        <%= f.date_field :date_3, required: false %>
        <br />

        <label>予約日4</label><br>
        <%= f.date_field :date_4, required: false %>
        <br />

        <label>予約日5</label><br>
        <%= f.date_field :date_5, required: false %>
        <br />

        <label>予約日6</label><br>
        <%= f.date_field :date_6, required: false %>
        <br/>

        <label>予約日7</label><br>
        <%= f.text_field :date_7,　as: :date, required: false %>
        <br />

        <%= f.input :additional_notes, as: :text, required: false, label: '備考／相談内容等' %>
        <%= f.submit '確認画面' %>

      <% else %>

        <table class="table table-responsive">
          <tr>
            <th>予約日1<th>
            <td><%= @reservation.date_1 %><td>
          </tr>
          <tr>
            <th>予約日2<th>
            <td><%= @reservation.date_2 %><td>
          </tr>
          <tr>
            <th>予約日3<th>
            <td><%= @reservation.date_3 %><td>
          </tr>
          <tr>
            <th>予約日4<th>
            <td><%= @reservation.date_4 %><td>
          </tr>
          <tr>
            <th>予約日5<th>
            <td><%= @reservation.date_5 %><td>
          </tr>
          <tr>
            <th>予約日6<th>
            <td><%= @reservation.date_6 %><td>
          </tr>
          <tr>
            <th>予約日7<th>
            <td><%= @reservation.date_7 %><td>
          </tr>
          <tr>
            <th>備考<th>
            <td><%= @reservation.additional_notes %><td>
          </tr>
        </table>
        <%= f.hidden_field :date_1 %>
        <%= f.hidden_field :date_2 %>
        <%= f.hidden_field :date_3 %>
        <%= f.hidden_field :date_4 %>
        <%= f.hidden_field :date_5 %>
        <%= f.hidden_field :date_6 %>
        <%= f.hidden_field :date_7 %>
        <%= f.hidden_field :additional_notes %>

        <p>この内容でよろしいでしょうか？</p>
        <%= f.submit '送信する' %>
      <% end %>

      <%= f.hidden_field :confirming %>

    <% end %>
  </div>
</div>
 