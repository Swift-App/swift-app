<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <%= link_to '戻る', staff_index_path, class: 'btn btn-warning btn-round' %>
    <h3 class="text-center">出発報告</h3>

    <%= simple_form_for @attendence_report do |f| %>
      <%= f.input :job_id, collection: current_user.jobs, label: 'お仕事' %>
      <%= f.input :report_type, label: '出退勤', collection: AttendenceReport::REPORT_TYPES %>      
      <%= f.submit '完了', class: 'btn btn-success pull-right' %>
    <% end %>
  </div>
</div>